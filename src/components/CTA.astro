---
import { socialsList } from "../constants/socials";
import { techStackList } from "../constants/techStack";
import ButtonWithTooltip from "./ButtonWithTooltip.astro";
import Badge from "./Badge.astro";
---

<section id="cta">
  <div class="flex justify-between">
    <div>
      <p class="font-bold text-2xl md:text-4xl">Neuman Fabr√≠cio</p>
      <p class="font-semibold text-gray-300 text-lg md:text-xl">
        Fullstack Developer
      </p>
    </div>
    <div class="flex items-center gap-2">
      {
        socialsList.map((item) => (
          <ButtonWithTooltip
            title={item.title}
            icon={item.icon}
            url={item.url}
          />
        ))
      }
    </div>
  </div>

  <div class="mt-4">
    {techStackList.map((item) => <Badge title={item.name} icon={item.icon} />)}
  </div>

  <div class="flex items-center mt-10 gap-4">
    <a
      class="transition-all duration-500 bg-gradient-to-r from-red-500 to-red-600 text-white p-3 rounded-lg font-semibold hover:from-red-600 hover:to-red-700"
      href="mailto:fabricionewman@gmail.com">Contact me</a
    >
    <a class="font-semibold hover:text-gray-200" href="#projects"
      >Browse projects</a
    >
  </div>
</section>

