---
interface Props {
  title?: string;
  text?: string;
  isUrl?: boolean;
}

const { title, text, isUrl } = Astro.props;
---

<div class="inline-flex items-center rounded-full bg-slate-900">
  <span class="inline-flex py-2 px-3 rounded-full bg-red-500 font-semibold"
    >{title}</span
  >
  {
    isUrl ? (
      <a
        href={"https://" + text}
        class="pl-3 pr-5 text-red-400"
        target="_blank"
      >
        {text}
      </a>
    ) : (
      <span class="pl-3 pr-5">{text}</span>
    )
  }
</div>
